@page "/privacy"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "ManagerPolicy")]

<h3>Privacy</h3>

<AuthorizeView>
    <h2>
        Hello @context.User.Identity.Name,
        here's the list of your claims - Sample API :
    </h2>
    <ul>
        @foreach (var claim in Claims)
        {
            <li>@claim</li>
        }
    </ul>
</AuthorizeView>